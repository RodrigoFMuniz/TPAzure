@model TPAzure.ViewModels.ViewModelPaisIntermediario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar novo país</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data"  asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataIndependencia" class="control-label"></label>
                <input asp-for="DataIndependencia" class="form-control" />
                <span asp-validation-for="DataIndependencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdHabitantes" class="control-label"></label>
                <input asp-for="QtdHabitantes" class="form-control" />
                <span asp-validation-for="QtdHabitantes" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ImageUri" class="control-label"></label>
                <input asp-for="ImageUri" class="form-control" />
                <span asp-validation-for="ImageUri" class="text-danger"></span>
            </div>*@
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="ImageUri" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="ImageUri" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Escolha a imagem da bandeira</label>
                        </div>
                        <span asp-validation-for="ImageUri" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar país" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
