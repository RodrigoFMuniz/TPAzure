@model TPAzure.ViewModels.PaisViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar país</h1>

<h3>Está certo que deseja apagar este dado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataIndependencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataIndependencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdHabitantes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdHabitantes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUri)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Assets/Imagens/@Html.DisplayFor(model => model.ImageUri)" class="rounded-circle" height="40" width="40" asp-append-version="true" alt="Imagem" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
