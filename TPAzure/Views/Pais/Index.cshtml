@model IEnumerable<TPAzure.ViewModels.PaisViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Paises</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">Busca</label>
                <input id="keySearch" value="@ViewBag.keySearch" name="keySearch" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Busca por país (data crescente)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create">Cadastrar novo País</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataIndependencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdHabitantes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataIndependencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdHabitantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUri)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
